{
  "name": "itau-uy-utils",
  "version": "0.8.0",
  "description": "Provides useful utilities for ItaÃº UY website",
  "author": "Avi Tretiak",
  "license": "MIT",
  "private": true,
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "bun build.ts --watch",
    "clean": "del-cli dist",
    "lint": "eslint \"src/**/*.ts\" \"build.ts\" && prettier --check ./src",
    "lint:fix": "eslint \"src/**/*.ts\" \"build.ts\" --fix && prettier --write ./src",
    "ci": "bun run lint",
    "build": "cross-env NODE_ENV=production bun run ci && bun run clean && bun build.ts"
  },
  "devDependencies": {
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@violentmonkey/types": "^0.2.0",
    "cash-dom": "^8.1.5",
    "cross-env": "^7.0.3",
    "del-cli": "^6.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "src/**": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}