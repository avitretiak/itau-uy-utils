{
  "name": "itau-uy-utils",
  "version": "0.6.1",
  "description": "Provides useful utilities for ItaÃº UY website",
  "author": "Avi Tretiak",
  "license": "MIT",
  "private": true,
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "bun build.ts --watch",
    "clean": "del-cli dist",
    "lint": "eslint --ext .ts . && prettier --ignore-path .eslintignore --check .",
    "lint:fix": "eslint --ext .ts --fix . && prettier --ignore-path .eslintignore --write .",
    "ci": "bun run lint",
    "build": "cross-env NODE_ENV=production bun run ci && bun run clean && bun build.ts"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@violentmonkey/types": "^0.1.9",
    "cross-env": "^7.0.3",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "src/**": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}